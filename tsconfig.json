{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "skipLibCheck": true,
    "typeRoots": ["./src/@types", "node_modules/@types"]
  },
  "include": ["./src/**/*"],
  "exclude": ["./src/**/*.spec.ts"]
}
